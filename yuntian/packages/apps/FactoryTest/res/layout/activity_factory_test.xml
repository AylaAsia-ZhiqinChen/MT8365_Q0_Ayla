<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/factory_test_activity_paddingbottom"
            android:paddingLeft="@dimen/factory_test_activity_paddingleft"
            android:paddingRight="@dimen/factory_test_activity_paddingright"
            android:paddingTop="@dimen/factory_test_activity_paddingtop">

            <TextView
                android:id="@+id/auto_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/auto_test_height"
                android:layout_gravity="center"
                android:background="@drawable/auto_test_background"
                android:gravity="center"
                android:padding="@dimen/auto_test_padding"
                android:text="@string/auto_test_title"
                android:textColor="@color/white"
                android:textSize="@dimen/auto_test_text_size"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/test_group_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="@integer/test_group_column_count"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
