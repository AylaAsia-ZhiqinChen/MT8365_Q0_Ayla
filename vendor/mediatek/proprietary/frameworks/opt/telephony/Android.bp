bootstrap_go_package {
    name: "soong-TelephonyCommon-mediatek",
    pkgPath: "android/soong/TelephonyCommon/mediatek",
    deps: [
        "soong-android",
        "soong-java",
    ],
    srcs: [
       "TelephonyCommon.go",
    ],
    pluginFor: ["soong_build"],
}

mtk_TelephonyCommon_defaults {
    name: "mediatek-TelephonyCommon_defaults",
}

java_library {
    name: "mediatek-telephony-common",
    installable: true,

    defaults: [
        "mediatek-telephony-hidl",
        "mediatek-TelephonyCommon_defaults",
    ],

    aidl: {
        include_dirs: ["frameworks/opt/telephony/src/java"],
        local_include_dirs: ["src/java"],
    },
    srcs: [
        "src/java/**/*.java",
        "src/java/**/I*.aidl",
        "src/java/**/*.logtags",
    ],

    libs: [
        "telephony-common",
        "mediatek-framework",
        "mediatek-telephony-base",
    ] + [
        "mediatek-common",
        "ims-common",
        "mediatek-telecom-common",
        "mediatek-ims-common",
        "mediatek-ims-base",
    ] + ["services"],

    static_libs: [
        "wfo-common",
    ],

}

