// A memory map is a sequence of memory descriptions and
// optional parameter assignments.
//
// Each memory description has the following format:
//   BEGIN <name>
//     <addr> [,<paddr>] : <mem-type> : <mem-name> : <size> [,<psize>]
//                       : [writable] [,executable] [,device] ;
//     <segment>*
//   END <name>
//
// where each <segment> description has the following format:
//     <seg-name> : F|C : <start-addr> - <end-addr> [ : STACK ] [ : HEAP ]
//                : <section-name>* ;
//
// Each parameter assignment is a keyword/value pair in the following format:
//   <keyword> = <value>                (no spaces in <value>)
// or
//   <keyword> = "<value>"              (spaces allowed in <value>)
//
// The following primitives are also defined:
//   PLACE SECTIONS( <section-name>* ) { WITH_SECTION(<section-name>)
//                                       | IN_SEGMENT(<seg-name>) }
//
//   NOLOAD <section-name1> [ <section-name2> ... ]
//
// Please refer to the Xtensa LSP Reference Manual for more details.
//

// Additions for -mvecbase option:
VECBASE = 0x40000400


// Additions for -mvecreset option:
VECRESET = 0x40000000


// Additions for -mvecselect option:
VECSELECT = 1

// Reserve dram0 tail 1KB for IPC share-mem
BEGIN dram0
0x1e000000: dataRam : dram0 : 0x5F800 : writable ;
 dram0_0 : C : 0x1e000000 - 0x1e05f7ff : STACK :  HEAP : .dram0.rodata .rodata .dram0.literal .dram0.data .data .dram0.bss .bss;
END dram0

BEGIN iram0
0x40000000: instRam : iram0 : 0x18000 : executable, writable ;
 iram0_0 : F : 0x40000000 - 0x400003ff : .ResetVector.text .ResetHandler.literal .ResetHandler.text;
 iram0_1 : F : 0x40000400 - 0x4000057b : .WindowVectors.text .Level2InterruptVector.literal;
 iram0_2 : F : 0x4000057c - 0x4000059b : .Level2InterruptVector.text .Level3InterruptVector.literal;
 iram0_3 : F : 0x4000059c - 0x400005bb : .Level3InterruptVector.text .DebugExceptionVector.literal;
 iram0_4 : F : 0x400005bc - 0x400005db : .DebugExceptionVector.text .KernelExceptionVector.literal;
 iram0_5 : F : 0x400005dc - 0x400005fb : .KernelExceptionVector.text .UserExceptionVector.literal;
 iram0_6 : F : 0x400005fc - 0x4000061b : .UserExceptionVector.text .DoubleExceptionVector.literal;
 iram0_7 : F : 0x4000061c - 0x40017fff : .DoubleExceptionVector.text .iram0.literal .literal .iram0.text .text ;
END iram0

BEGIN dram
0x40020000: sysram : dram : 0x600000 : executable, writable ;
 dram0 : C : 0x40020000 - 0x4061FFFF : .dram.rodata .dram.literal .dram.text .dram.data .dram.bss;
END dram
