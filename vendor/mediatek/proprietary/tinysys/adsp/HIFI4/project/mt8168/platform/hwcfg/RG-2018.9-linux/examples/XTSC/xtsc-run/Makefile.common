.PHONY: all target run xtsc-run tie clean

ifeq ($(NO_TIE),)
TIE_DEPEND = ../../TIE/example.tdk/done
endif

TIMEOUT = 20

XTSC_RUN = xtsc-run

TEST=TEST:\ \ \ 

.DEFAULT_GOAL := xtsc-run

all: target

target: $(TARGET_OBJECTS)

tie: ../../TIE/example.tdk/done
../../TIE/example.tdk/done: ../../TIE/example.tie
	$(MAKE) -C ../.. tie


%.out: %.c $(TIE_DEPEND)
	$(TARGET_CXX) $(TARGET_CFLAGS) -o $@ $< $(TARGET_LIBS)

run:
	$(XTSC_RUN) -include=$(SCRIPT) $(XTSCRUNARGS)

xtsc-run: target
	$(XTSC_RUN) -include=$(SCRIPT) $(XTSCRUNARGS)

clean:
	-$(RM) *.out *.bin *.log

