#include "$(XTSC_SCRIPT_FILE_PATH)/common.h"

#ifndef WORDS
#define WORDS 16
#endif

#lua_beg
  NumCores = tonumber(xtsc.cmd("xtsc xtsc_user_state_get NumCores"))
  work_size = $(WORDS) * 4
  error_size = NumCores * 4
#lua_end

xtsc shmem_get                             rhoward.shmem_lock $(SHMEM_LOCK_BASE) $(SHMEM_LOCK_SIZE)
xtsc shmem_get                             rhoward.shmem_work $(SHMEM_WORK_BASE) $(SHMEM_WORK_SIZE)
xtsc xtsc_host_mutex_open                  rhoward.shmem_lock 

alias       dw=xtsc shmem_dump             rhoward.shmem_work $(SHMEM_WORK_BASE) `work_size`
alias       dl=xtsc shmem_dump             rhoward.shmem_lock $(SHMEM_LOCK_BASE) 4
alias       de=xtsc shmem_dump             rhoward.shmem_work $(SHMEM_WORK_ERRORS) `error_size`
alias trespass=xtsc shmem_poke             rhoward.shmem_work $(SHMEM_WORK_BASE) 4 0xee 0xee 0xee 0xee
alias     lock=xtsc xtsc_host_mutex_lock   rhoward.shmem_lock 
alias   unlock=xtsc xtsc_host_mutex_unlock rhoward.shmem_lock 
alias        l=lock
alias        u=unlock

aliases

