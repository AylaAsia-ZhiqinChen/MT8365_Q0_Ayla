//
// Mms service
//
bootstrap_go_package {
    name: "soong-MmsService-mediatek",
    pkgPath: "android/soong/MmsService/mediatek",
    deps: [
        "soong-android",
        "soong-java",
    ],
    srcs: [
       "MmsService.go",
    ],
    pluginFor: ["soong_build"],
}

mtk_MmsService_defaults {
    name: "mediatek-MmsService_defaults",
}

android_app {
    name: "MtkMmsService",
    overrides: [
        "MmsService",
    ],
    platform_apis: true,
    privileged: true,
    libs: [
        "telephony-common",
        "mediatek-framework",
        "telephony-common",
        "org.apache.http.legacy",
        "voip-common",
        "ims-common",
        "mediatek-common",
        "mediatek-telephony-base",
        "mediatek-telephony-common",
        "mediatek-ims-common",
    ],
    static_libs: ["services.net"],
    srcs: ["src/**/*.java"],
    defaults: [
        "mediatek-MmsService_defaults",
    ],  
    resource_dirs: ["res"],
    aaptflags: ["--auto-add-overlay"],
    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },
    certificate: "platform",
}
