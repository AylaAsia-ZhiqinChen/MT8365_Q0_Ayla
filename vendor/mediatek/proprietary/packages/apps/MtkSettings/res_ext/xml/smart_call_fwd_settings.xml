<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="smart_call_fwd_settings"
                  android:title="@string/smart_call_fwd_settings_title"
                  android:id="@+id/smartCallFwd">

    <ListPreference
            android:key="smart_call_fwd_modes"
            android:title="@string/smart_call_fwd_settings_title"
            android:summary="%s"
            android:entries="@array/smart_call_fwd_choices"
            android:entryValues="@array/smart_call_fwd_mode_values"
            android:defaultValue="3"
            android:dialogTitle="@string/smart_call_fwd_dlg_title"
            android:enabled="false" />

    <EditTextPreference
        android:title="SIM1 Number"
        android:dialogTitle="SIM1 Number"
        android:key="smart_sim1_pref"
        android:singleLine="true"
        android:inputType="phone"
        android:summary="@string/value_not_set"
        android:enabled="false"
        />

    <EditTextPreference
        android:title="SIM2 Number"
        android:dialogTitle="SIM2 Number"
        android:key="smart_sim2_pref"
        android:singleLine="true"
        android:inputType="phone"
        android:summary="@string/value_not_set"
        android:enabled="false"
        />
</PreferenceScreen>
