<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout style="@style/info_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/force_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/force_rat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/force_rat" />

                <RadioButton
                    android:id="@+id/force_band"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/force_band" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/force_dpdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/force_dpdt_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/force_dpdt_single" />

                <RadioButton
                    android:id="@+id/force_dpdt_double"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/force_dpdt_double" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/force_ant_mode" />

            <Spinner
                android:id="@+id/force_ant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:entries="@array/force_ant_on_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tas_ver" />

            <Spinner
                android:id="@+id/tas_ver1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:entries="@array/force_ant_tas_version" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tas_rat" />

            <Spinner
                android:id="@+id/tas_rat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:entries="@array/force_ant_tas_rat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tas_band_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tas_band" />

            <EditText
                android:id="@+id/tas_band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tas_nvram_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tas_nvram" />

            <Spinner
                android:id="@+id/tas_nvram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:entries="@array/force_ant_tas_nvram" />
        </LinearLayout>


         <TextView
             android:id="@+id/tas_ant_idx_View"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="5dp"
             android:text="@string/dpdt1_idx" />

         <Spinner
             android:id="@+id/dpdt1_idx"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tas_ant_idx" />

             <EditText
                android:id="@+id/tas_ant_idx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/force_tx_set"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="10dip"
            android:text="@string/force_tx_set" />
    </LinearLayout>

</ScrollView>