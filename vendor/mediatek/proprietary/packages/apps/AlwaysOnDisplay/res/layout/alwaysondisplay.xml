        <TextClock
            android:id="@+id/dig_cloc"
            style="@style/big_thin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/clock_max_height"
            android:layout_marginTop="@dimen/top_text_spacing_digital"
            android:layout_marginBottom="@dimen/bottom_text_spacing_digital"
            android:ellipsize="none"
            android:format12Hour="@string/time_format_12_mode"
            android:format24Hour="@string/clock_24_hours_format"
            android:gravity="bottom"
            android:background="@color/yellow1"
            android:textColor="@color/clock_white"/>
            
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/date"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/clock_white"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_marginTop="@dimen/date_margin_top"/>
                
            <LinearLayout
                android:id="@+id/notif_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/gap_between"
	            android:orientation="horizontal"
	            android:baselineAligned="false">

	            <ImageView android:id="@+id/call_icon"
	                android:layout_width="@dimen/icon_size"
	                android:layout_height="@dimen/icon_size"
	                android:layout_gravity="top"
	                android:background="@color/lime"
	                android:src="@drawable/ic_call_icon" />
	
	            <TextView
	                android:id="@+id/call_count"
	                style="@style/notification"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:singleLine="true"
	                android:layout_gravity="top"
	                android:gravity="left"
	                android:background="@color/lime_yellow"
	                android:textColor="@color/clock_white"
	                android:layout_marginTop="@dimen/notification_margin_top"
	                android:layout_marginLeft="@dimen/gap_between_icon_text"/>
	
	            <ImageView android:id="@+id/sms_icon"
	                android:layout_width="@dimen/icon_size"
	                android:layout_height="@dimen/icon_size"
	                android:layout_gravity="top"
	                android:background="@color/lime"
	                android:src="@drawable/ic_sms_icon" 
	                android:layout_marginLeft="@dimen/gap_between_icon_text1"/>
	
	            <TextView
	                android:id="@+id/sms_count"
	                style="@style/notification"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:singleLine="true"
	                android:layout_gravity="top"
	                android:gravity="left"
	                android:background="@color/lime_yellow"
	                android:textColor="@color/clock_white"
	                android:layout_marginTop="@dimen/notification_margin_top"
	                android:layout_marginLeft="@dimen/gap_between_icon_text"/>
        	</LinearLayout>
        </LinearLayout>
