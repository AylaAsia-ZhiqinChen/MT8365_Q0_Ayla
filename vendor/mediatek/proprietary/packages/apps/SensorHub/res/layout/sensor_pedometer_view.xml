<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="8dip"
    android:paddingEnd="?android:attr/scrollbarSize">
    <TextView
            android:id="@+id/step_length_title"
            android:text="@string/step_length"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:paddingStart="8dip"
            android:textSize="15dp" />
    <EditText
            android:id="@+id/step_length_value"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:paddingStart="8dip"
            android:textSize="15dp"
            android:inputType="number" />
    <Button
            android:id="@+id/set_step"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/sensor_set_button" />
    <!-- <Button -->
            <!-- android:id="@+id/clear_step" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:text="@string/clear_step" /> -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <!-- Scenario -->
        <TextView
            android:id="@+id/tv_pedometer_scenario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_scenario"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <View
            android:id="@+id/v_pedometer_0"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_scenario"
            android:layout_alignEnd="@+id/tv_pedometer_scenario"
            android:layout_alignStart="@+id/tv_pedometer_scenario"
            android:background="#000000" />

        <!-- Category -->
        <TextView
            android:id="@+id/tv_pedometer_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_pedometer_scenario"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/pedometer_category"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pedometer_category"
            android:layout_toEndOf="@+id/tv_pedometer_category" />

        <View
            android:id="@+id/v_pedometer_1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_category"
            android:background="#7e7e7e" />

        <!-- Sub-category -->
        <TextView
            android:id="@+id/tv_pedometer_sub_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_pedometer_1"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_sub_category"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_sub_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pedometer_sub_category"
            android:layout_toEndOf="@+id/tv_pedometer_sub_category" />

        <View
            android:id="@+id/v_pedometer_2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_sub_category"
            android:background="#7e7e7e" />

        <!-- Placement -->
        <TextView
            android:id="@+id/tv_pedometer_placement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_pedometer_2"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_placement"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_placement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pedometer_placement"
            android:layout_toEndOf="@+id/tv_pedometer_placement" />

        <View
            android:id="@+id/v_pedometer_3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_placement"
            android:background="#7e7e7e" />

        <!-- Person -->
        <TextView
            android:id="@+id/tv_pedometer_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_pedometer_3"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_person"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_person_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pedometer_person"
            android:layout_toEndOf="@+id/tv_pedometer_person"
            android:entries="@array/pedometer_person_sex"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_person_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spn_pedometer_person_sex"
            android:layout_toEndOf="@+id/tv_pedometer_person"
            android:entries="@array/pedometer_person_num"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_person_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spn_pedometer_person_num1"
            android:layout_toEndOf="@+id/spn_pedometer_person_num1"
            android:entries="@array/pedometer_person_num"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/v_pedometer_4"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/spn_pedometer_person_num1"
            android:background="#7e7e7e" />

        <!-- Device -->
        <TextView
            android:id="@+id/tv_pedometer_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_pedometer_4"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_device"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spn_pedometer_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pedometer_device"
            android:layout_toEndOf="@+id/tv_pedometer_device"
            android:entries="@array/pedometer_device" />

        <View
            android:id="@+id/v_pedometer_5"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_device"
            android:background="#7e7e7e" />

        <TextView
            android:id="@+id/tv_pedometer_competitor_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/v_pedometer_5"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_competitor_start"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edt_pedometer_competitor_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pedometer_competitor_start"
            android:layout_toEndOf="@+id/tv_pedometer_competitor_start"
            android:cursorVisible="false"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- Action -->
        <TextView
            android:id="@+id/tv_pedometer_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_pedometer_competitor_start"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_action"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <View
            android:id="@+id/v_pedometer_6"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_action"
            android:layout_alignEnd="@+id/tv_pedometer_action"
            android:layout_alignStart="@+id/tv_pedometer_action"
            android:background="#000000" />

        <ListView
            android:id="@+id/lv_pedometer_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pedometer_action"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <!-- Step -->
        <TextView
            android:id="@+id/tv_pedometer_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_pedometer_file"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/pedometer_step"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <View
            android:id="@+id/v_pedometer_7"
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tv_pedometer_step"
            android:layout_alignEnd="@+id/tv_pedometer_step"
            android:layout_alignStart="@+id/tv_pedometer_step"
            android:background="#000000" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pedometer_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_pedometer_7">

        <TextView
            android:id="@+id/tv_pedometer_step_num_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/pedometer_step_num_1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_pedometer_step_num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/pedometer_step_num_2"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/clear_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/clear_step"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</LinearLayout>
