<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:background="@drawable/bt_background"
  	>
  <RelativeLayout
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/bt_dial_edt"
	  	android:layout_margin="4dp"
	  	android:gravity="center">

	  	<EditText
		  android:id="@+id/text_call_info"
		  android:layout_width="fill_parent"
		  android:layout_height="60dp"
		  android:background="#00000000"
		  android:singleLine="true"
		  android:textSize="40dp"
		  android:layout_centerVertical="true"
		  android:layout_alignParentLeft="true"
		  android:layout_marginTop="2dp"/>
		  
		<ImageButton 
		  android:id="@+id/btn_del_num"
	  	  android:src="@drawable/bg_dialpad_backspace"
	  	  android:background="#00000000"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="24dp"
		  android:layout_centerVertical="true"
		  android:layout_alignParentRight="true"
	      android:layout_marginRight="8dp"/>
	  
	</RelativeLayout>

 	<TableLayout
 		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		>
  		<TableRow
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1"
  			android:gravity="center_vertical"
  			>
  		  	<Button android:id="@+id/btn_recall"
  				android:text="@string/str_btn_recall"
  				android:background="@xml/bg_dialpad_call"
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent"
		  		android:textSize="24dp"
		  		android:layout_weight="1"
		  		/>	
  			<Button
  				android:id="@+id/btn_call_one"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_1"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>
  		  	<Button
  				android:id="@+id/btn_call_two"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_2"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>	
  		  	<Button
  				android:id="@+id/btn_call_three"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_3"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>  
  		  	<Button
  				android:id="@+id/btn_call_asterisk"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_asterisk"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>  									
  		</TableRow>
  		<TableRow
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1"
  			android:gravity="center_vertical"
  			>
  			<Button android:id="@+id/btn_call"
		  		android:text="@string/str_call"
		  		android:background="@xml/bg_dialpad_call"
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent"
		  		android:textSize="24dp"
		  		android:layout_weight="1"
		  		/>
  			<Button
  				android:id="@+id/btn_call_four"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_4"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>
  		  	<Button
  				android:id="@+id/btn_call_five"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_5"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>	
  		  	<Button
  				android:id="@+id/btn_call_six"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_6"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>  
  		  	<Button
  				android:id="@+id/btn_call_zero"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_0"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>  									
  		</TableRow>
  		<TableRow
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1"
  			>
    		<Button 
    			android:id="@+id/btn_clear_all_num"
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent"
		  		android:textSize="24dp"
		  		android:layout_weight="1"
		  		android:background="@xml/bg_dialpad_btn"
		  		android:text="@string/str_clear_all"
		  		/>
  			<Button
  				android:id="@+id/btn_call_seven"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_7"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>
  		  	<Button
  				android:id="@+id/btn_call_eight"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_8"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>	
  		  	<Button
  				android:id="@+id/btn_call_nine"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_9"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>  
  		  	<Button
  				android:id="@+id/btn_call_pound"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@xml/bg_dialpad_number"
  				android:text="@string/str_pound"
  				android:textColor="#FFFFFF"
  				android:textSize="24dp"
  				android:layout_weight="1"
  				/>  									
  		</TableRow>
  	</TableLayout>
</LinearLayout>
