<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:id="@+id/bt_calling_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/str_out_call_status"
        android:textSize="30dp"
        />
    <ImageView
        android:id="@+id/bt_calling_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picture_unknown"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/bt_calling_phone_number"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="28dp"
        android:textColor="#FFF"
        android:layout_margin="3dp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/bt_calling_phone_number2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="28dp"
        android:textColor="#FFF"
        android:layout_margin="3dp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom ="8dp"
        android:layout_marginRight ="6dp"
        >

        <Button
            android:id="@+id/btn_voiceswitch_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/bg_call_carsound_btn"
            android:text="@string/str_bt_call_carsound"
            android:textSize="16dp"
            android:gravity ="bottom"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btn_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/bg_call_answer_btn"
            android:text="@string/str_bt_call_answer"
            android:textSize="16dp"
            android:gravity ="bottom"
            android:textColor="#00ff00"
            android:visibility="gone"
            android:layout_margin="4dp"
            />
        <Button
            android:id="@+id/btn_hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_bt_call_end"
            android:background="@xml/bg_call_hangup_btn"
            android:textSize="16dp"
            android:gravity ="bottom"
            android:textColor="#ff0000"
            android:layout_margin="4dp"
            />

        <Button
            android:id="@+id/btn_softkeypad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/bg_call_keypad_btn"
            android:text="@string/str_bt_call_softkeypad"
            android:textSize="16dp"
            android:gravity ="bottom"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />
        <Button
            android:id="@+id/btn_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/bg_call_ex_btn"
            android:textSize="16dp"
            android:gravity ="bottom"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/calling_softkeypad"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/calling_input_et"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom = "10dp"
            android:layout_gravity="center_vertical"
            android:background= "@drawable/bt_call_inputbox_bg"
            android:singleLine="true"
            android:textSize="28dp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/btn_calling_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_1"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_2"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_3"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/btn_calling_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_4"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_5"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_6"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/btn_calling_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_7"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_8"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_9"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/btn_calling_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_0"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_asterisk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_asterisk"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_calling_pound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/bg_softkeypad"
                    android:text="@string/str_pound"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:layout_margin="4dp"
                    />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
