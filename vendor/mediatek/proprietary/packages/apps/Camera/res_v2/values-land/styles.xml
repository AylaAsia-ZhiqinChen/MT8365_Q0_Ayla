<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <style name="SettingIndicator_v2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>
    
    <style name="ScreenOnMargin_v2">
        <item name="android:layout_marginTop">@dimen/screen_on_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/screen_on_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/screen_on_margin_left</item>
        <item name="android:layout_marginRight">@dimen/screen_on_margin_right</item>
    </style> 
        
    <style name="ModeToastLayout_v2" parent="ScreenOnMargin_v2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
