<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mediatek.camera.feature.mode.facebeauty.widget.UIRotateLayout style="@style/EffectToastLayout">

        <RelativeLayout
            android:id="@+id/onscreen_toast_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/on_screen_hint_frame"
                android:shadowColor="#BB000000"
                android:shadowRadius="2.75"
                android:textAppearance="@style/OnScreenHintTextAppearance.Small"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </com.mediatek.camera.feature.mode.facebeauty.widget.UIRotateLayout>
</RelativeLayout>
