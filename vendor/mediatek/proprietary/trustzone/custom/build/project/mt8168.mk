MTK_ATF_SUPPORT=yes
MTK_ATF_VERSION=v1.6
TRUSTONIC_TEE_SUPPORT=no
MTK_IN_HOUSE_TEE_SUPPORT=yes
KEYMASTER_VERSION=3.0
KEYMASTER_RPMB=yes
KEYMASTER_WRAPKEY=yes
ATF_MEMBASE=0x54600000

MEMSIZE		:= 0x600000
MEMSIZE_PR	:= 0x800000
MEMSIZE_WV	:= 0xB800000
MEMSIZE_WVPR	:= 0xB800000 # 184MB, <= MAX_TEE_SIZE (192MB)
FBSIZE		:= 0
FBSIZE_WVSVP	:= 0x0A000000 # will allocate from kernel through CMA

ifeq ($(filter yes ,$(MTK_CAM_SECURITY_SUPPORT)),yes)
MEMSIZE := 0x0AC00000 # 172MB, <= MAX_TEE_SIZE (192MB)
FBSIZE  := 0x09400000 # will allocate from kernel through CMA
endif

$(warning MTK_CAM_SECURITY_SUPPORT=$(MTK_CAM_SECURITY_SUPPORT))
$(warning MEMSIZE=$(MEMSIZE))
$(warning FBSIZE=$(FBSIZE))

BOOTSHARE := 0x40002000

SECURE_FUNC_STACK_NUM := 1 # number of stacks, max is 16
SECURE_FUNC_STACK_SIZE := 2048 # stack size in bytes
TZMEM_RELEASECM_SIZE := 0
MACH_TYPE := 8168

