include $(TRUSTZONE_CUSTOM_BUILD_PATH)/common_config.mk

ifeq ($(TARGET_BUILD_VARIANT),eng)
  WATCHDATA_INSTALL_MODE ?= Debug
else
  WATCHDATA_INSTALL_MODE ?= Release
endif
ifeq ($(WATCHDATA_INSTALL_MODE),Debug)
  WATCHDATA_INSTALL_MODE_LC := debug
else
  WATCHDATA_INSTALL_MODE_LC := release
endif

export WATCHDATA_ADDITIONAL_DEPENDENCIES := $(abspath $(TRUSTZONE_PROJECT_MAKEFILE) $(TRUSTZONE_CUSTOM_BUILD_PATH)/common_config.mk $(TRUSTZONE_CUSTOM_BUILD_PATH)/watchdata_config.mk)
#WATCHDATA_RAW_IMAGE_NAME := $(TRUSTZONE_CUSTOM_BUILD_PATH)/../../watchdata/source/platform/$(ARCH_MTK_PLATFORM)/kernel/start.bin
WATCHDATA_RAW_IMAGE_NAME := $(TRUSTZONE_CUSTOM_BUILD_PATH)/../../watchdata/source/os/start.bin
WATCHDATA_TEMP_PADDING_FILE := $(TRUSTZONE_IMAGE_OUTPUT_PATH)/bin/$(ARCH_MTK_PLATFORM)_watchdata_$(WATCHDATA_INSTALL_MODE_LC)_pad.txt
WATCHDATA_TEMP_CFG_FILE := $(TRUSTZONE_IMAGE_OUTPUT_PATH)/bin/img_hdr_watchdata.cfg
WATCHDATA_SIGNED_IMAGE_NAME := $(TRUSTZONE_IMAGE_OUTPUT_PATH)/bin/$(ARCH_MTK_PLATFORM)_watchdata_$(WATCHDATA_INSTALL_MODE_LC)_signed.img
WATCHDATA_PADDING_IMAGE_NAME := $(TRUSTZONE_IMAGE_OUTPUT_PATH)/bin/$(ARCH_MTK_PLATFORM)_watchdata_$(WATCHDATA_INSTALL_MODE_LC)_pad.img
WATCHDATA_COMP_IMAGE_NAME := $(TRUSTZONE_IMAGE_OUTPUT_PATH)/bin/$(ARCH_MTK_PLATFORM)_watchdata.img

$(WATCHDATA_TEMP_PADDING_FILE): ALIGNMENT=512
$(WATCHDATA_TEMP_PADDING_FILE): MKIMAGE_HDR_SIZE=512
$(WATCHDATA_TEMP_PADDING_FILE): RSA_SIGN_HDR_SIZE=576
$(WATCHDATA_TEMP_PADDING_FILE): $(WATCHDATA_RAW_IMAGE_NAME) $(WATCHDATA_ADDITIONAL_DEPENDENCIES)
	@echo Trusty watchdata 1 build: $@
	$(hide) mkdir -p $(dir $@)
	$(hide) rm -f $@
	$(hide) FILE_SIZE=$$(($$(wc -c < "$(WATCHDATA_RAW_IMAGE_NAME)")+$(MKIMAGE_HDR_SIZE)+$(RSA_SIGN_HDR_SIZE)));\
	REMAINDER=$$(($${FILE_SIZE} % $(ALIGNMENT)));\
	if [ $${REMAINDER} -ne 0 ]; then dd if=/dev/zero of=$@ bs=$$(($(ALIGNMENT)-$${REMAINDER})) count=1; else touch $@; fi

$(WATCHDATA_TEMP_CFG_FILE): $(TEE_DRAM_SIZE_CFG) $(WATCHDATA_ADDITIONAL_DEPENDENCIES)
	@echo Trusty watchdata 2 build: $@
	$(hide) mkdir -p $(dir $@)
	$(hide) rm -f $@
	@echo "LOAD_MODE = 0" > $@
	@echo "NAME = tee" >> $@
	@echo "LOAD_ADDR =" $(TEE_TOTAL_DRAM_SIZE) >> $@

$(WATCHDATA_PADDING_IMAGE_NAME): $(WATCHDATA_RAW_IMAGE_NAME) $(WATCHDATA_TEMP_PADDING_FILE) $(WATCHDATA_ADDITIONAL_DEPENDENCIES)
	@echo Trusty watchdata 3 build: $@
	$(hide) mkdir -p $(dir $@)
	$(hide) cat $(WATCHDATA_RAW_IMAGE_NAME) $(WATCHDATA_TEMP_PADDING_FILE) > $@

$(WATCHDATA_SIGNED_IMAGE_NAME): ALIGNMENT=512
$(WATCHDATA_SIGNED_IMAGE_NAME): $(WATCHDATA_PADDING_IMAGE_NAME) $(TRUSTZONE_SIGN_TOOL) $(TRUSTZONE_IMG_PROTECT_CFG) $(TEE_DRAM_SIZE_CFG) $(WATCHDATA_ADDITIONAL_DEPENDENCIES)
	@echo Trusty watchdata 4 build: $@
	$(hide) mkdir -p $(dir $@)
	$(hide) $(TRUSTZONE_SIGN_TOOL) $(TRUSTZONE_IMG_PROTECT_CFG) $(WATCHDATA_PADDING_IMAGE_NAME) $@ $(TEE_DRAM_SIZE)
	$(hide) FILE_SIZE=$$(wc -c < "$(WATCHDATA_SIGNED_IMAGE_NAME)");REMAINDER=$$(($${FILE_SIZE} % $(ALIGNMENT)));\
	if [ $${REMAINDER} -ne 0 ]; then echo "[ERROR] File $@ size $${FILE_SIZE} is not $(ALIGNMENT) bytes aligned";exit 1; fi

$(WATCHDATA_COMP_IMAGE_NAME): ALIGNMENT=512
$(WATCHDATA_COMP_IMAGE_NAME): $(WATCHDATA_SIGNED_IMAGE_NAME) $(MTK_MKIMAGE_TOOL) $(WATCHDATA_TEMP_CFG_FILE)  $(WATCHDATA_ADDITIONAL_DEPENDENCIES)
	@echo Trusty build: $@
	$(hide) mkdir -p $(dir $@)
	$(hide) $(MTK_MKIMAGE_TOOL) $(WATCHDATA_SIGNED_IMAGE_NAME) $(WATCHDATA_TEMP_CFG_FILE) > $@
	$(hide) FILE_SIZE=$$(wc -c < "$(WATCHDATA_COMP_IMAGE_NAME)");REMAINDER=$$(($${FILE_SIZE} % $(ALIGNMENT)));\
	if [ $${REMAINDER} -ne 0 ]; then echo "[ERROR] File $@ size $${FILE_SIZE} is not $(ALIGNMENT) bytes aligned";exit 1; fi

