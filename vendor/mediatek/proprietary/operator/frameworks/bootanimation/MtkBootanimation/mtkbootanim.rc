service bootanim /system/bin/mtkbootanimation
    class core animation
    user graphics
    group graphics audio
    disabled
    oneshot
    writepid /dev/stune/top-app/tasks

# MTK add
service banim_shutmp3 /system/bin/mtkbootanimation shut mp3
