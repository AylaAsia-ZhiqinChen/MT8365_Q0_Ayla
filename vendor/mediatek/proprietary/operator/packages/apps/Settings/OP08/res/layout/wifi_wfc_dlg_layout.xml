<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <ImageView 
        android:id="@+id/wifi_wizard_dialog_image"
        android:src="@drawable/wfc_info_indication_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"/>
    
    <TextView 
        android:id="@+id/wifi_wizard_dialog_bottom_message"
        android:text="@string/Wifi_wfc_dialog_bottom_wording"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_below="@+id/wifi_wizard_dialog_image"/>
    
 </RelativeLayout>
