<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:layout_marginTop="10dip"
    android:orientation="vertical">
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:orientation="vertical">
	<RadioGroup
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/wfc_preference_button_group"
	    android:paddingTop="10dip"
	    android:paddingRight="20dip">
		<RadioButton
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/wifi_preferred"
	        android:text="@string/WiFi_preferred"
	        android:textSize="20sp"/>
	    <TextView
	        android:id="@+id/summary_wifi_preferred"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/WiFi_preferred_summary"
	        android:textSize="14sp"
	        android:paddingLeft="35dip"
	        android:paddingRight="20dip"
	        android:focusable="false"
	        android:layout_below="@id/wifi_preferred"/>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#bdbdbd" />
	    <RadioButton
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/cellular_network_preferred"
	        android:text="@string/Cellular_network_preferred"
	        android:textSize="20sp"/>
	    <TextView
	        android:id="@+id/summary_cellular_network_preferred"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/Cellular_network_preferred_summary"
	        android:textSize="14sp"
	        android:paddingLeft="35dip"
	        android:paddingRight="20dip"
	        android:focusable="false"
	        android:layout_below="@id/cellular_network_preferred"/>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#bdbdbd" />
	    <RadioButton
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/never_use_cellular_network"
	        android:text="@string/Never_use_cellular_network"
	        android:textSize="20sp"/>
	    <TextView
	        android:id="@+id/summary_never_use_cellular_network"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/Never_use_cellular_network_summary"
	        android:textSize="14sp"
	        android:paddingLeft="35dip"
	        android:paddingRight="20dip"
	        android:focusable="false"
	        android:layout_below="@id/never_use_cellular_network"/>
	</RadioGroup>
 	</ScrollView>
 </RelativeLayout>
