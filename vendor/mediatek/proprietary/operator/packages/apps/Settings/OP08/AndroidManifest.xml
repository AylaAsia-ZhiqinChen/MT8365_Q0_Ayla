<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mediatek.op08.settings"
          coreApp="true"
          android:versionCode="1"
          android:versionName="1.0"
          android:sharedUserId="android.uid.system">

          <!-- Do not use "android.uid.system" as sharedUserId, beacuse plugin is using WebView,
                    which do render in system process -->

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.DIGITS" />

    <!-- Add your plug-in service here -->
    <application android:label="OperatorPlugin">
      <!-- WFC Plugin Start -->
        <activity android:name="com.mediatek.op08.settings.WfcTutorialActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Material.Settings"
            android:exported="false"
            android:label="@string/Tutorials">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="mediatek.settings.WFC_TUTORIALS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.mediatek.op08.settings.WfcQuestionAnswersActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Material.Settings"
            android:exported="false"
            android:label="@string/Wfc_questions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="mediatek.settings.WFC_QA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.mediatek.op08.settings.WfcModeDialogActivity"
                android:theme="@*android:style/Theme.Material.Light.Dialog.Alert"
                android:exported="false"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="mediatek.settings.SHOW_WFC_MODE_DIALOG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.mediatek.op08.settings.WfcWifiDialogActivity"
                android:theme="@*android:style/Theme.Material.Light.Dialog.Alert"
                android:exported="false"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="mediatek.settings.WFC_WIFI_ENABLE_DIALOG_LAUNCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.mediatek.op08.settings.WfcInvalidSimDialogActivity"
                android:theme="@*android:style/Theme.Material.Light.Dialog.Alert"
                android:exported="false"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="mediatek.settings.WFC_INVALID_SIM_DIALOG_LAUNCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <receiver android:name="com.mediatek.op08.settings.WfcSettingsReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
                <action android:name="com.mediatek.hotknot.DISCOVERY_START_ACTION" />
                <action android:name="com.mediatek.hotknot.DISCOVERY_END_ACTION" />
            </intent-filter>
        </receiver>
        <!-- WFC Plugin End -->

    </application>

</manifest>
