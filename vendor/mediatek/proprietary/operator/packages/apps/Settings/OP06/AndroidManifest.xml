<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mediatek.op06.settings"
          coreApp="true"
          android:versionCode="1"
          android:versionName="1.0"
          android:sharedUserId="android.uid.system">

    <uses-permission android:name= "android.permission.READ_CONTACTS"/>
    <uses-permission android:name= "android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.mediatek.permission.omacp.install"/>

    <uses-sdk android:minSdkVersion="5"/>

    <!-- Add your plug-in service here -->
    <application android:label="OperatorPlugin">
        <!-- M: WifiCalling receiver -->
        <receiver android:name="com.mediatek.op06.settings.WifiCallingReceiver">
            <intent-filter>
                <action android:name="com.android.intent.action.IMS_CONFIG_CHANGED" />
                <data
                    android:scheme="content"
                    android:host="com.mediatek.ims.config.provider"
                    android:pathPattern="/tb_master/.*/EPDG_ADDRESS"
                    android:mimeType="vnd.android.cursor.item/imsconfig"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.mediatek.ims.config.action.CONFIG_LOADED" />
                <action android:name="android.telephony.action.CARRIER_CONFIG_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mediatek.omacp.settings" />
                <data android:mimeType="application/com.mediatek.omacp-ims"/>
            </intent-filter>
        </receiver>

        <service android:name="com.mediatek.op06.settings.WifiCallingReceiverService"
            android:exported="false">
        </service>
    </application>

</manifest>
