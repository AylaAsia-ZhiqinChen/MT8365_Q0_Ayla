<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mediatek.ims.pco"
          coreApp="true"
          android:versionCode="1"
          android:versionName="1.0"
          android:sharedUserId="android.uid.phone"
          android:protectionLevel="signature|system">
          
    <uses-sdk android:minSdkVersion="23"/>
    <protected-broadcast android:name=
        "com.mediatek.ims.pco.ACTION_QUERY_IMS_PCO_STATUS_FRM_NOTIFICATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="com.mediatek.permission.start.pcostartupwizardmainactivity" />

    <permission android:name="com.mediatek.permission.start.pcostartupwizardmainactivity"
        android:protectionLevel="signatureOrSystem">
    </permission>

    <!-- Add your plug-in service here -->
    <application android:label="Verizon activation">
        <!-- M: PCO receiver for handling when PC0 = 3 & 5 -->
        <activity android:name=".ui.PCOAccountSettings"
                android:label="@string/view_vzw_account"
                android:icon="@drawable/ic_settings_accounts"
                android:configChanges="orientation|screenSize|keyboardHidden|mcc|mnc"
                android:launchMode="singleTop"
                android:clearTaskOnLaunch="true">
            <intent-filter android:priority="0">
                <action android:name="com.android.settings.OPERATOR_APPLICATION_SETTING" />
            </intent-filter>
            <meta-data android:name="com.android.settings.category"
                android:value="com.android.settings.category.personal" />
        </activity>
        <activity android:name=".ui.PCOStartUPWizardMainActivity"
            android:permission="com.mediatek.permission.start.pcostartupwizardmainactivity"
            android:label="@string/setup_title" 
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.mediatek.ims.pco.ui.ACTION_SIGN_UP" />
                <category android:name="com.mediatek.ims.pco.category.USE_WIFI_NW" />
                <action android:name="com.mediatek.ims.pco.ui.ACTION_SIGN_UP_EXIT"/>
            </intent-filter>
        </activity>
        <receiver android:name=".PCOBootCompletedReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
           </receiver>
        <service android:name=".PCOService"
            android:exported="false"
            android:persistent="true">
        </service>
    </application>
</manifest>
