cc_library_headers {
    name: "libmtkcam_headers",
    proprietary: true,
    owner: "mtk",

    header_libs: [
        "libutils_headers",
        "libcutils_headers",
        "liblog_headers",
        "libhardware_headers",
        "libsystem_headers",
        "device_kernel_headers",
    ],
    export_header_lib_headers: [
        "libutils_headers",
        "libcutils_headers",
        "liblog_headers",
        "libhardware_headers",
        "libsystem_headers",
        "device_kernel_headers",
    ],

    export_include_dirs: [
        "include",
    ],
}

cc_library_headers {
    name: "libmtkcam_legacy_headers",
    proprietary: true,
    owner: "mtk",

    export_include_dirs: [
        "include",
        "include/mtkcam",
    ],
}

cc_library_headers {
    name: "libmtkcam_algorithm_headers",
    defaults: ["libmtkcam_algo_platform_headers"],
    proprietary: true,
    owner: "mtk",
}

mtk_mtkcam_algorithm_platform_headers {
    name: "libmtkcam_algo_platform_headers",
}

bootstrap_go_package {
    name: "soong-mtkcam_mediatek",
    pkgPath: "android/soong/mtkcam/mediatek",
    deps: [
        "soong-android",
        "soong-cc",
    ],
    srcs: [
        "mtkcam.go"
    ],
    pluginFor: ["soong_build"],
}

optional_subdirs = [
    "utils/*",
]
