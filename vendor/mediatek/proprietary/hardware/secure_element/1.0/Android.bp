    shared_libs: [
        /* HIDL service */
        "libhidlbase",
        "libhidltransport",
        "libutils",
        "android.hardware.secure_element@1.0",

        /* Implementation */
        "libcutils",
        "liblog",
        "android.hardware.radio@1.2",
        "android.hardware.radio@1.4",
