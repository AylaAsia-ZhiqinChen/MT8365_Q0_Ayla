    name: "android.hardware.secure_element@1.0-service-mediatek",
    relative_install_path: "hw",
    proprietary: true,

    defaults: ["hidl_defaults"],
    init_rc: ["android.hardware.secure_element@1.0-service-mediatek.rc"],

    srcs: [
        "MtkUiccSeService.cpp",
