package vendor.mediatek.hardware.mms@1.1;

struct DpRect {
    int32_t x;
    int32_t sub_x;
    int32_t y;
    int32_t sub_y;
    int32_t w;
    int32_t h;
};

struct HwMDPParam {
    /* src width */
    int32_t src_width;

    /* src height */
    int32_t src_height;

    /* src yPitch */
    int32_t src_yPitch;

    /* src uvPitch */
    int32_t src_uvPitch;

    /* src color format */
    int32_t src_format;

    /* src color profile */
    int32_t src_profile;

    /* src InterlaceFormat */
    int32_t src_field;

    /* src crop */
    DpRect src_rect;

    /* src VA list */
    uint64_t[3] src_VAList;

    /* src MVA list */
    uint32_t[3] src_MVAList;

    /* src size list*/
    uint32_t[3] src_sizeList;

    /* src plane number*/
    int32_t src_planeNumber;

    /* dst width */
    int32_t dst_width;

    /* dst height */
    int32_t dst_height;

    /* dst yPitch */
    int32_t dst_yPitch;

    /* dst uvPitch */
    int32_t dst_uvPitch;

    /* dst format */
    int32_t dst_format;

    /* dst color profile */
    int32_t dst_profile;

    /* dst InterlaceFormat */
    int32_t dst_field;

    /* dst roi */
    DpRect dst_rect;

    /* dst VA list */
    uint64_t[3] dst_VAList;

    /* dst MVA list */
    uint32_t[3] dst_MVAList;

    /* dst size list */
    uint32_t[3] dst_sizeList;

    /* dst plane number */
    int32_t dst_planeNumber;

    /* pid for va2mva */
    uint32_t pid;

    /* n x 90 rotation degree */
    int32_t rotation;

    /* mirror mode*/
    int32_t flip;
};