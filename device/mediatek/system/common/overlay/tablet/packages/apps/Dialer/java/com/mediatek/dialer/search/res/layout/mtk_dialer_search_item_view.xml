<?xml version="1.0" encoding="utf-8"?>

<!-- M: [MTK Dialer Search] add search item layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialer_search_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <QuickContactBadge
        android:id="@+id/quick_contact_photo"
        android:layout_width="@dimen/contact_photo_size"
        android:layout_height="@dimen/contact_photo_size"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/call_log_inner_margin"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ellipsize="marquee"
            android:maxWidth="176dip"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="@color/dialtacts_primary_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/labelAndNumber"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/call_log_inner_margin"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/call_info"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/callType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/call_log_icon_margin" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/call_log_icon_margin"
                android:maxWidth="170dip"
                android:textColor="@color/dialtacts_secondary_text_color"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/call_log_icon_margin"
                android:singleLine="true"
                android:textColor="@color/dialtacts_secondary_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/call_account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/call_log_icon_margin"
            android:ellipsize="middle"
            android:maxWidth="66dip"
            android:singleLine="true"
            android:textColor="@color/dialtacts_secondary_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>