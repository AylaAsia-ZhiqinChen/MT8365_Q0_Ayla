LOCAL_PATH := $(call my-dir)

LOCAL_FLAVOR_MODULES := $(call all-makefiles-under,$(LOCAL_PATH)/$(MTK_TARGET_PROJECT))
LOCAL_BASE_MODULES := $(call all-makefiles-under,$(LOCAL_PATH)/$(MTK_BASE_PROJECT))
LOCAL_TEMP_MODULES := $(subst $(LOCAL_PATH)/$(MTK_TARGET_PROJECT),$(LOCAL_PATH)/$(MTK_BASE_PROJECT),$(LOCAL_FLAVOR_MODULES))
LOCAL_EBASE_MODULES := $(filter-out $(LOCAL_TEMP_MODULES), $(LOCAL_BASE_MODULES))
LOCAL_PLATFORM_MODULES := $(call all-makefiles-under, $(LOCAL_PATH)/$(shell echo $(MTK_PLATFORM) | tr '[A-Z]' '[a-z]'))

ifneq ($(MTK_EMULATOR_SUPPORT), yes)
include $(LOCAL_FLAVOR_MODULES) $(LOCAL_EBASE_MODULES) $(LOCAL_PLATFORM_MODULES)
else
include $(LOCAL_FLAVOR_MODULES) $(LOCAL_EBASE_MODULES)
endif

